{
  "manifest_version": 2,

  "name": "jetzt",
  "description": "Speed Reading",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "css": ["jetzt.css"],
      "js": ["jetzt.js", "chrome-config.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": { "16": "img/icon16.png",
             "48": "img/icon48.png",
             "128": "img/icon128.png" }
}
