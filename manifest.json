{
  "manifest_version": 2,

  "name": "jetzt",
  "description": "Speed Reading",
  "version": "1.0.1",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "css": ["jetzt.css"],
      "js": ["modules/helpers.js","modules/config.js","modules/control.js","modules/parsing.js","modules/running.js","modules/selectmode.js","modules/state.js","modules/view.js",
             "jetzt.js", "chrome-config.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "icons": { "16": "img/icon16.png",
             "48": "img/icon48.png",
             "128": "img/icon128.png" },
   "browser_action" : {
       "default_icon" :  { 
            "19": "img/icon19.png",
            "38": "img/icon38.png"
       	},
        "default_title" : "speed-read with jetzt"        
    },
    "background": {
	    "scripts": ["background.js"],
	    "persistent": false
	},
	 "options_page" : "options/options.html"
}
