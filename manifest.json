{
  "manifest_version": 2,

  "name": "jetzt",
  "description": "Speed Reading",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "css": ["jetzt.css"],
      "js": ["jetzt.js", "content-script.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" }
}
